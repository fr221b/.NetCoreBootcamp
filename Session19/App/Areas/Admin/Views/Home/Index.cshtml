


<style>
       input,select{
              padding: 10px;
              margin: 10px;
       }
       button{
              padding: 10px;
              margin: 10px;
       }
       table{
              border: 1px solid black;
              width: 100%;
       }
       th{
              border: 1px solid black;
              padding: 10px;
       }
       td{
              border: 1px solid black;
              padding: 10px;
       }
</style>


<br>
<br>

<div style="padding:20px;margin-top:120px;text-align:center; border:1px solid black;margin:70px">

 <form action="/Admin/Home/Add" method="post">
       <div>
        <input required  type="text" placeholder="CatName" name="CatName" >
        <select  name="ParentId" asp-items="@ViewBag.Menu">
              <option  value="0">ParentName</option>
        </select>
        <button type="submit">Save Cat</button>
       </div>
</form>







       
       <div style="margin-top: 20px;text-align:center">
              <table>
                     <tr>
                            <th>CatName</th>
                            <th>ParentName</th>
                            <th>Action</th>
                     </tr>


@foreach (var item in @ViewBag.Table)
{
        <tr>
                            <td>@item.CatName</td>
                            <td>@item.ParentName</td>
                            <td>
                            <button type="button">Edit</button>
                            <button type="button">Delete</button>
                            </td>
                     </tr>
}       


                     
              </table>
       </div>

</div>